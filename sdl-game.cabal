        base ^>=4.14.1.0
      , sdl-game
      , sdl2
      , text
      , linear

    hs-source-dirs:   app
    default-language: Haskell2010

test-suite sdl-game-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          MyLibTest.hs
    build-depends:    base ^>=4.14.1.0
